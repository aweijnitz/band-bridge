{
  "name": "band-bridge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npx prisma generate && next build",
    "generate:schema": "npx prisma generate",
    "start": "next start",
    "lint": "next lint",
    "test": "npm run test:api && npm run test:ui",
    "test:api": "jest --testPathPattern=tests/api",
    "test:ui": "jest --testPathPattern=tests/ui",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test --config=playwright.microservices.config.ts --trace on",
    "test:e2e:microservices": "playwright test --config=playwright.microservices.config.ts",
    "test:e2e:microservices:manual": "./scripts/run-e2e-microservices.sh",
    "reset": "npx prisma migrate reset --force && rm -rf public/filestore/*",
    "start:audio-service": "npm start --prefix src/backend/audio",
    "build:audio-service": "npm run build --prefix src/backend/audio"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.2",
    "@types/express-fileupload": "^1.5.1",
    "@types/form-data": "^2.5.2",
    "@types/node-fetch": "^2.6.12",
    "@types/pg": "^8.15.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.1",
    "form-data": "^4.0.2",
    "next": "15.3.2",
    "node-fetch": "^2.7.0",
    "pg": "^8.16.0",
    "prisma": "^6.8.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "wavesurfer.js": "^7.9.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "supertest": "^7.1.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.4",
    "typescript": "^5",
    "video.js": "^7.21.7",
    "videojs-markers": "^1.0.1"
  }
}
