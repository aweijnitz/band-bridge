{
  "name": "band-bridge-admin-service",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "build": "echo 'Run build:prep if build fails on prisma files' && tsc",
    "build:prep": "rm -rf generated && mkdir -p generated && cp -R ../../../src/generated/prisma generated",
    "clean": "rm -rf dist generated"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "prisma": "^6.8.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.4.2",
    "nodemon": "^3.0.1",
    "typescript": "^5.4.2"
  }
}
